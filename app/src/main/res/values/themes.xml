<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar" >
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:statusBarColor">@color/ThemePurple</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/ThemePurple</item>
        <item name="colorControlHighlight">@color/ThemePurple</item>
        <item name="textInputStyle">@style/EditTextOutlined</item>
        <item name="snackbarStyle">@style/SnackBarFullWidth</item>

    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>
    

    <style name="Theme_MyProfile" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">70%</item>
        <item name="android:windowMinWidthMinor">70%</item>

    </style>
    
    <style name="SF_font">
        <item name="fontFamily">@as/sf_regular</item>
    </style>

    <style name="EditTextOutlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    <style name="SnackBarFullWidth"> parent="Widget.MaterialComponents.Snackbar.FullWidth"</style>

</resources>